@model EventManagementSystem.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
