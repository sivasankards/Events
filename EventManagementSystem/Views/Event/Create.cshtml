@section Scripts {
    <script type="text/javascript">

        $(function () {
            $('#StartDateTime').datetimepicker(
                {
                    format: 'MM-DD-YYYY HH:mm',
                    sideBySide: true,
                    showTodayButton: true
                });
        });

        $(function () {
            var date = new Date();
            date.setHours(1);
            date.setMinutes(0);
            $('#Duration').datetimepicker(
                {
                    format: 'HH:mm',
                    defaultDate: date,
                    showClear: true
                });
        });

        $('#btnCancel').click(function () {
            window.location.href = "http://localhost:52043/Event/MyEvents";
        });

        $('#btnCreate').click(function () {
            //debugger
            var UserId = '@Request.RequestContext.HttpContext.Session["UserId"]';
            if ($("#Title").val() == "" || $("#StartDateTime").val() == "" || $("#Duration").val() == "") {

            }
            else {
                var model = {
                    Title: $("#Title").val(),
                    StartDateTime: $("#StartDateTime").val(),
                    Duration: $("#Duration").val(),
                    Description: $("#Description").val(),
                    Location: $("#Location").val(),
                    //IsPublic: $("#IsPublic").is(':checked'),
                    TicketRate: $("#TicketRate").val(),
                    Seats: $("#Seats").val(),
                    UserId: UserId,
                }

                $.ajax({
                    url: 'http://localhost:52077/api/Account/POSTCreateEvent',
                    data: model,
                    type: "POST",
                    success: function (savingStatus) {
                        alert('Event Created Successfully');
                        window.location.href = "http://localhost:52043/Event/MyEvents";
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert('Error');
                    }
                });
            }
        });
</script>
